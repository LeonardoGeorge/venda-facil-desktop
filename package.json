{
  "name": "venda-facil-desktop",
  "version": "1.0.0",
  "description": "",
  "main": "electron-app/main.js",
  "scripts": {
    "dev": "concurrently \"cd venda-facil-Laravel && php artisan serve\" \"electron electron-app/main.js\"",
    "dist": "electron-builder --win",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.solucx.venda-facil",
    "productName": "Venda FÃ¡cil",
    "directories": {
      "output": "build"
    },
    "files": [
      "electron-app/**/*",
      "venda-facil-Laravel/**/*",
      "!venda-facil-Laravel/storage/**/*",
      "!venda-facil-Laravel/node_modules/**/*",
      "!venda-facil-Laravel/vendor/**/*",
      "!venda-facil-Laravel/.git/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^24.13.3",
    "concurrently": "^7.6.0"
  }
}