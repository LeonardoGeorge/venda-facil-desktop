{
  "name": "venda-facil-desktop",
  "version": "1.0.0",
  "description": "Venda Fácil - Sistema de Vendas Desktop",
  "main": "electron-app/main.js",
  "scripts": {
    "dev": "concurrently \"cd venda-facil-Laravel && php artisan serve\" \"electron electron-app/main.js\"",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:clean": "rm -rf build && npm run build:win",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "venda",
    "facil",
    "desktop",
    "laravel",
    "electron"
  ],
  "author": "Leonardo George",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.leonardogeorge.vendafacil",
    "productName": "Venda Fácil",
    "directories": {
      "output": "build"
    },
    "files": [
      "electron-app/**/*",
      "venda-facil-Laravel/**/*",
      "!venda-facil-Laravel/node_modules",
      "!venda-facil-Laravel/storage/logs/**/*",
      "!venda-facil-Laravel/.env",
      "!venda-facil-Laravel/.git",
      "!venda-facil-Laravel/.gitignore",
      "!venda-facil-Laravel/README.md"
    ],
    "extraResources": [
      {
        "from": "venda-facil-Laravel",
        "to": "laravel-app",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Venda Fácil"
    }
  }
}